{
  "name": "z-workshop-desktop",
  "version": "0.0.1-alpha",
  "description": "Z Workshop desktop app",
  "author": "Zord <quangsang.red@gmail.com>",
  "license": "MIT",

  "main": "dist-electron/main.js",
  "scripts": {
    "nuxt:dev": "nuxt dev --no-fork",
    "nuxt:generate": "nuxt generate",
    "electron:dev": "cross-env NODE_ENV=development wait-on http://localhost:3000 && electron .",
    "dev": "nuxi dev",
    "build": "pnpm run clean && nuxi build --prerender && electron-builder",
    "build:win": "pnpm run clean && nuxi build --prerender && electron-builder --win",
    "build:mac": "pnpm run clean && nuxi build --prerender && electron-builder --mac",
    "build:linux": "pnpm run clean && nuxi build --prerender && electron-builder --linux",
    "postinstall": "nuxt prepare",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "clean": "pnpm run clean:dist && pnpm run clean:output && pnpm run clean:dist-electron",
    "clean:dist": "rimraf dist",
    "clean:output": "rimraf .output",
    "clean:dist-electron": "rimraf dist-electron"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.30",
    "@iconify-json/radix-icons": "^1.2.2",
    "@internationalized/date": "^3.7.0",
    "@number-flow/vue": "^0.4.5",
    "@tanstack/vue-table": "^8.21.2",
    "@unovis/ts": "^1.5.1",
    "@unovis/vue": "^1.5.1",
    "dotenv": "^16.4.7",
    "embla-carousel": "^8.5.2",
    "embla-carousel-vue": "^8.5.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@nuxt/eslint": "^1.2.0",
    "@nuxt/icon": "^1.11.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.5.1",
    "@unocss/eslint-plugin": "^66.0.0",
    "@unocss/nuxt": "^66.0.0",
    "@vee-validate/zod": "^4.15.0",
    "@vueuse/core": "^12.2.0",
    "@vueuse/math": "^12.2.0",
    "@vueuse/nuxt": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "electron": "^35.1.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9.22.0",
    "eslint-plugin-format": "^1.0.1",
    "lucide-vue-next": "^0.482.0",
    "nuxt": "^3.16.0",
    "radix-vue": "^1.9.17",
    "shadcn-nuxt": "^0.10.4",
    "tailwind-merge": "^2.6.0",
    "typescript": "^5.8.2",
    "unocss": "^66.0.0",
    "unocss-preset-animations": "^1.1.1",
    "unocss-preset-shadcn": "^0.5.0",
    "vaul-vue": "^0.2.0",
    "vee-validate": "^4.15.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue-sonner": "^1.3.0",
    "vue-tsc": "^2.1.10",
    "wait-on": "^8.0.3",
    "zod": "^3.24.2"
  }
}
